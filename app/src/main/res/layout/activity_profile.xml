<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="?android:attr/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="210dp"
            android:layout_height="71dp"
            android:layout_marginBottom="16dp"
            android:text="Your Profile"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_marginBottom="12dp"
            android:hint="Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etAge"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="12dp"
            android:hint="Age"
            android:inputType="number" />

        <Spinner
            android:id="@+id/spinnerGender"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etDiabetesValue"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_marginBottom="12dp"
            android:hint="Current Diabetes Value (mg/dL)\nif it is normal put value in between 70 to 100"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/etAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="About You"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etOtherInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Other Info (e.g., allergies)"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnSubmitProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textSize="18sp"
            android:backgroundTint="#FF5722"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>